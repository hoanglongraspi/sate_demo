      transition: width 0.1s, height 0.1s, border-width 0.1s;
      box-shadow: 0 0 4px rgba(0, 0, 0, 0.2);
      z-index: 2;
    }
    
    /* Make the handle larger when dragging for better UX */
    .audio-progress-handle.dragging {
