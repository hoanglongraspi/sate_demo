  <!-- Add orientation check script just before the closing body tag -->
  <script>
    // Function to check device width and show/hide rotate message
    function checkOrientation() {
      const rotateOverlay = document.getElementById('rotateDeviceOverlay');
      // Check if it's a mobile device (likely under 768px) and in portrait orientation (height > width)
      if (window.innerWidth < 768 && window.innerHeight > window.innerWidth) {
        rotateOverlay.style.display = 'flex';
      } else {
        rotateOverlay.style.display = 'none';
      }
    }

    // Check on page load
    window.addEventListener('load', checkOrientation);
    
    // Check when window is resized or orientation changes
    window.addEventListener('resize', checkOrientation);
    window.addEventListener('orientationchange', checkOrientation);
    
    // Handle mobile tip banner dismissal
    document.addEventListener('DOMContentLoaded', function() {
      // Setup mobile tip banner dismissal
      const tipBanner = document.getElementById('mobileTipBanner');
      const closeTipBtn = document.getElementById('closeMobileTip');
      
      // Force show the banner if we're on mobile
      if (window.innerWidth <= 1000) {
        tipBanner.style.display = 'flex';
      }
      
      if (closeTipBtn && tipBanner) {
        // Handle the close button click
        closeTipBtn.addEventListener('click', function() {
          tipBanner.classList.add('hidden-banner');
          document.body.classList.remove('has-tip-banner');
        });
      }
      
      // Setup sidebar toggle functionality
      const leftSidebar = document.getElementById('leftSidebar');
      const rightSidebar = document.getElementById('rightSidebar');
      const toggleLeftBtn = document.getElementById('toggleLeftSidebar');
      const toggleRightBtn = document.getElementById('toggleRightSidebar');
      const showLeftBtn = document.getElementById('showLeftSidebar');
      const showRightBtn = document.getElementById('showRightSidebar');
      
      // Left sidebar toggle
      if (toggleLeftBtn && leftSidebar && showLeftBtn) {
        toggleLeftBtn.addEventListener('click', function() {
          leftSidebar.classList.add('hidden');
          showLeftBtn.classList.remove('hidden');
          showLeftBtn.classList.add('flex');
        });
        
        showLeftBtn.addEventListener('click', function() {
          leftSidebar.classList.remove('hidden');
          showLeftBtn.classList.remove('flex');
          showLeftBtn.classList.add('hidden');
        });
      }
      
      // Right sidebar toggle
      if (toggleRightBtn && rightSidebar && showRightBtn) {
        toggleRightBtn.addEventListener('click', function() {
          rightSidebar.classList.add('hidden');
          showRightBtn.classList.remove('hidden');
          showRightBtn.classList.add('flex');
        });
        
        showRightBtn.addEventListener('click', function() {
          rightSidebar.classList.remove('hidden');
          showRightBtn.classList.remove('flex');
          showRightBtn.classList.add('hidden');
        });
      }
      
      // Add control bar toggle functionality
      const filterButtons = document.querySelectorAll('.annotation-filter');
      
      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          const filterType = this.getAttribute('data-type');
          
          // If "all" button is clicked, show/hide all highlights
          if (filterType === 'all') {
            const isActive = this.classList.contains('active-filter');
            
            // Toggle active state on all buttons
            filterButtons.forEach(btn => {
              if (isActive) {
                btn.classList.remove('active-filter');
                btn.innerHTML = btn.innerHTML.replace('visibility_off', 'visibility');
              } else {
                btn.classList.add('active-filter');
                btn.innerHTML = btn.innerHTML.replace('visibility', 'visibility_off');
              }
            });
            
            // Toggle visibility of all highlights
            document.querySelectorAll('.highlight').forEach(highlight => {
              highlight.style.backgroundColor = isActive ? 'transparent' : '';
            });
            
            return;
          }
          
          // Toggle active state on this button
          this.classList.toggle('active-filter');
          
          // Update icon
          if (this.classList.contains('active-filter')) {
            this.innerHTML = this.innerHTML.replace('visibility', 'visibility_off');
          } else {
            this.innerHTML = this.innerHTML.replace('visibility_off', 'visibility');
          }
          
          // Toggle visibility of matching highlights
          document.querySelectorAll(`.highlight-${filterType}`).forEach(highlight => {
            if (this.classList.contains('active-filter')) {
              highlight.style.backgroundColor = 'transparent';
            } else {
              highlight.style.backgroundColor = '';
            }
          });
        });
      });
      
      // Simulate play/pause functionality
      const playButton = document.getElementById('playButton');
      if (playButton) {
        playButton.addEventListener('click', function() {
          const icon = this.querySelector('.material-icons');
          if (icon.textContent === 'play_arrow') {
            icon.textContent = 'pause';
          } else {
            icon.textContent = 'play_arrow';
          }
        });
      }
    });
    
    // Add morpheme detail popup functionality
    document.addEventListener('DOMContentLoaded', function() {
      const morphemeDetailPopup = document.getElementById('morphemeDetailPopup');
      const morphemeBaseWord = document.getElementById('morphemeBaseWord');
      const morphemeSuffix = document.getElementById('morphemeSuffix');
      const morphemeCategory = document.getElementById('morphemeCategory');
      const morphemeStart = document.getElementById('morphemeStart');
      const morphemeEnd = document.getElementById('morphemeEnd');
      const closeMorphemeDetail = document.getElementById('closeMorphemeDetail');
      
      // Close morpheme popup when clicking the close button
      closeMorphemeDetail && closeMorphemeDetail.addEventListener('click', hideMorphemeDetailPopup);
      
      // Close popup when clicking outside
      document.addEventListener('click', function(e) {
        if (morphemeDetailPopup &&
            !morphemeDetailPopup.contains(e.target) &&
            !e.target.classList.contains('highlight-morpheme')) {
          hideMorphemeDetailPopup();
        }
      });
      
      // Show morpheme detail popup when clicking on a morpheme
      document.querySelectorAll('.highlight-morpheme').forEach(morpheme => {
        morpheme.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const base = this.getAttribute('data-base');
          const suffix = this.getAttribute('data-suffix');
          const category = this.getAttribute('data-category');
          const timestampData = this.getAttribute('data-timestamp').split(':');
          const start = parseFloat(timestampData[0]);
          const end = parseFloat(timestampData[1]);
          
          morphemeBaseWord.textContent = base;
          morphemeSuffix.textContent = suffix;
          morphemeCategory.textContent = category;
          morphemeStart.textContent = start.toFixed(3);
          morphemeEnd.textContent = end.toFixed(3);
          
          // Position the popup
          const rect = this.getBoundingClientRect();
          morphemeDetailPopup.style.top = `${rect.bottom + window.scrollY + 8}px`;
          morphemeDetailPopup.style.left = `${rect.left + window.scrollX}px`;
          
          // Show the popup
          morphemeDetailPopup.classList.remove('hidden');
          morphemeDetailPopup.classList.add('show');
        });
      });
      
      // Exclude morphemes from the general highlight popup system
      const morphemes = document.querySelectorAll('.highlight-morpheme');
      morphemes.forEach(morpheme => {
        morpheme.addEventListener('mouseover', function(e) {
          e.stopPropagation();
        });
      });
      
      function hideMorphemeDetailPopup() {
        if (morphemeDetailPopup) {
          morphemeDetailPopup.classList.remove('show');
          morphemeDetailPopup.classList.add('hidden');
        }
      }
    });
  </script>

