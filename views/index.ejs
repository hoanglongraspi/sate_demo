      .text-2xl {
        font-size: 1.25rem !important;
      }
      
      .text-4xl {
        font-size: 1.5rem !important;
      }
      
      /* Text sizes */
      .text-xs {
        font-size: 9px !important;
      }
      
      .text-sm {
        font-size: 11px !important;
      }
      
      /* Spacing */
      .mb-6 {
        margin-bottom: 12px !important;
      }
      
      .mb-5 {
        margin-bottom: 10px !important;
      }
      
      .mb-4 {
